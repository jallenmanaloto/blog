<table>
    <thead>
        <th><h1>Today's Tasks</h1></th>
    </thead>

    <tbody>
        <% @tasks.each do |today| %>
            <tr>

                <% puts today %>
                <td><%= today.name %></td>
                <td><%= today.body %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'Back to categories', categories_path %>