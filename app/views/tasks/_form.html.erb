<%= form_with model: [@category, @task], local: true do |f| %>
  <p>
    <% if @task.errors.any? %>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </p>

  <p>
    <%= f.label :body %><br/>
    <%= f.text_field :name %>
    <%= f.text_field :body %>
    <%= f.input :task_date %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>